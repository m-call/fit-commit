<h2 id='welcome'>Welcome {{user.full_name}}</h2>

{{!-- {{{display-chart chartData}}} --}}

<h3 id='current-score'>Current Score: {{getUserScore user}}</h3>

<div class="form-group">
    <button class="btn btn-primary" type="submit" id="new-workout-button" style="background-color:rgb(196, 39, 39);">Add Workout</button>
</div>


<p id='friends'>Friends</p>
<div id='display-friends' style="display: none">
    {{#each user.friend_id as |friend|}}
        <div>{{showFriend friend}}</div>
    {{/each}}
</div>
<div id='display-friends-list'>

</div>

{{!-- {{printHistory workoutHistory}} --}}
<div id="workout-history" style="color: antiquewhite;">
    {{#each workoutHistory as |workout|}}
        {{#if workout.date}}
            <h5>{{workout.date}}</h5>
            <br>
        {{else}}
            {{#each this as |exercise|}}
                <div class="entry" style="color: antiquewhite;">
                    <h6>{{nameExercise exercise.id}}</h6>
                    <div>Weight: {{exercise.weight}} lbs</div>
                    <div>Sets: {{exercise.sets}}</div>
                    <div>Reps: {{exercise.repetitions}}</div>
                    <br>
                    <br>
                </div>
            {{/each}}
        {{/if}}
        </div>
    {{/each}}
</div>

<script src="./js/profile.js"></script>
