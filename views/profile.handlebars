{{!-- determines if add workout form in shown --}}
<div id='show-add-workout' style="display: none;">false</div>
{{!-- Workout option --}}
<div id='workout-selector-form' style="display: none;">
  <div class="col-md-6" id="shift2">
    <h2 id="Title">Add a workout!</h2>
    <div class="input-field white col s12" id="workout-select" style="width: 350px;">
    <select id="select-workout">
        <option value="" disabled selected>Choose your workout</option>
        <option value="1">Bicep Curls</option>
        <option value="2">Tricep Extensions</option>
        <option value="3">Bench Press</option>
        <option value="4">Dead Lift</option>
    </select>
    <label>Workout Select</label>
    </div>
    {{!-- Form information --}}
    <form class="form signup-form" id="form-submit">
      <div class="form-group">
        <label id="add-workout" for="repetitions">Repetitions:</label>
        {{!-- <input style="color: white"class="form-input" type="text" id="username-signup" /> --}}
        <input style="color: white"class="form-input" type="text" id="add-rep" />
      </div>
      <div class="form-group">
        <label id="add-workout" for="workout-sets">Sets:</label>
        {{!-- <input style="color: white"class="form-input" type="text" id="password-signup" /> --}}
        <input style="color: white"class="form-input" type="text" id="add-sets" />
      </div>
      <div class="form-group">
        <label id="add-workout" for="workout-weight">Weight:</label>
        <input style="color: white"class="form-input" type="text" id="add-weight" />
      </div>
    
    {{!-- <div class="form-group"> --}}
        <button class="btn btn-primary" type="submit" id="new-workout-button" style="background-color:rgb(196, 39, 39);">Add Exercise</button>
    {{!-- </div> --}}
    </form>
</div>
</div>
<button class="btn btn-primary" type="click" id="new-wk-button" style="background-color:rgb(196, 39, 39);">Add Workout</button>

{{!-- SPACE FOR CHART.JS INSIDE OF THE CARD BELOW --}}
<canvas id="scores" width="1000px" height="400px"></canvas>

{{!-- Workout History --}}
<div id="workout-history" style="color: black;"></div>
    {{#each workoutHistory as |workout|}}
       {{#if workout.date}}
          <div class="row">
            <div class="col s12 m6">
              <div class="card lime darken-3" id="workout-history-cards">
                <div class="card-content white-text">
                   {{!-- <div class="card-image"> --}}
                      {{!-- <img src="https://i.pinimg.com/originals/6d/cc/2d/6dcc2d2ac756fe47587fd2be39913e47.png">  --}}
                  <span class="card-title">{{workout.date}}</span>
                {{else}}
                    {{#each this as |exercise|}}
                        <div class="entry" style="color: black;">
                            <h6 id='exercise-name'>{{nameExercise exercise.exercise_id}}</h6>
                            {{!-- <h6>{{nameExercise id}}</h6> --}}
                            <div>Weight: {{exercise.weight}} lbs</div>
                            <div>Sets: {{exercise.sets}}</div>
                            <div>Reps: {{exercise.repetitions}}</div>
                            <br>
                            <br>
                        </div>
                    {{/each}}
          {{/if}}
        </div>
    {{/each}}
      </div>
    </div>
  </div>
</div>





